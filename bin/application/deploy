#!/usr/bin/env bash


new_version=$1
curr_version=$(poetry version -s)

sed -i "s/$curr_version/$new_version/" arc/__init__.py
poetry version $new_version

git add .
git commit -m "$new_version"
git tag "v$new_version"
git push
git push --tags
poetry publish -u $PYPI_USERNAME -p $PYPI_PASSWORD --build


